<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/stile.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item right-menu">
                            <a class="nav-link text-dark menu-button" asp-area="" asp-controller="Home" asp-action="Index">Справочник</a>
                            <div class="dropdown-menu">
                                <a  asp-area="" asp-controller="Specialnoct" asp-action="Index">Специальность</a>
                                <a  asp-area="" asp-controller="Prepodavatel" asp-action="Index">Преподаватель</a>
                                <a href="#">Предметь</a>
                            </div>
                        </li>
                        <li class="nav-item right-menu">
                               <a class="nav-link text-dark menu-button" asp-area="" asp-controller="Home" asp-action="Index">Данные</a>
                            <div class="dropdown-menu fle">
                                <a href="#" >Списки студентов</a>
                                <a href="#">Статистика</a>
                            </div>
                        </li>
                         <li class="nav-item right-menu">
                               <a class="nav-link text-dark menu-button" asp-area="" asp-controller="Home" asp-action="Index">Учебный комплекс</a>
                            <div class="dropdown-menu">
                                <a href="#">Ведомости</a>
                                <a href="#">Сводка по сесии</a>
                            </div>
                        </li>
                          <li class="nav-item right-menu">
                               <a class="nav-link text-dark menu-button" asp-area="" asp-controller="Home" asp-action="Index">Сервис</a>
                            <div class="dropdown-menu">
                                <a href="#">Настройка</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
